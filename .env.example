# Example Environment Configuration
# Copy this file to .env and fill in your actual values

# PostgreSQL Configuration
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_DB=supply_chain_db
POSTGRES_PORT=5435

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=your_email@example.com
PGADMIN_DEFAULT_PASSWORD=your_secure_pgadmin_password

# Airflow Configuration
AIRFLOW_EXECUTOR=LocalExecutor
AIRFLOW_DATABASE_USER=airflow
AIRFLOW_DATABASE_PASSWORD=your_secure_airflow_password
AIRFLOW_FERNET_KEY=your_generated_fernet_key_here
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=your_secure_admin_password
AIRFLOW_ADMIN_EMAIL=admin@example.com

# Data Ingestion
DB_HOST=postgres
DB_PORT=5432
DB_NAME=supply_chain_db
DB_USER=your_postgres_user
DB_PASS=your_secure_postgres_password

# dbt Configuration
DBT_POSTGRES_HOST=postgres
DBT_POSTGRES_PORT=5432
DBT_POSTGRES_USER=your_postgres_user
DBT_POSTGRES_PASSWORD=your_secure_postgres_password
DBT_POSTGRES_DBNAME=supply_chain_db
